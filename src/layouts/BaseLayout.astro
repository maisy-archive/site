---
import "unocss-hmr-fix";
import "@unocss/reset/tailwind.css";
import routes from "@/routes.json";
import NavBar from "@components/NavBar.astro";

export interface Props {
	title: string;
    class?: string;
}

const title = Astro.props.title ?? Astro.props.content.title;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
        <meta property="og:type" content="website">
        <meta property="og:title" content={`${title} - Beef's website`}>
        <meta property="og:image" content="/logo.png" />
        <meta property="og:description" content="Hello world! I'm Beef. Welcome to my site!">
        <meta name="theme-color" content="#f74242" />
		<title>{title} - Beef's website</title>
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link 
            href="https://fonts.googleapis.com/css2?family=Inter:wght@100;200;300;400;500;600;700;800;900&family=JetBrains+Mono:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800&display=swap" 
            rel="stylesheet"
        >

        <slot name="head" />
	</head>
	<body class="font-inter bg-base text-text flex w-screen h-screen flex-col">
        <NavBar routes={routes} />
		<span class={`p-4 h-screen w-screen overflow-y-auto scrollbar scrollbar-rounded scrollbar-track-color-mantle scrollbar-thumb-color-crust scrollbar-w-2 ${Astro.props.class}`}>
            <slot />
        </span>
	</body>
</html>