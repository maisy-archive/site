---
import BeefLogo from "@components/BeefLogo.astro";
import BaseLayout from "@layouts/BaseLayout.astro";
---

<BaseLayout title="Home">
    <main class="grid place-items-center text-center h-full">
        <div class="flex flex-col gap-2 text-center">
            <BeefLogo center={true} height="180" width="180" />
            <p class="md:(text-8xl) lt-md:(text-4xl) font-medium">Hello world!</p>
            <p class="md:(text-2xl) lt-md:(text-xl) text-subtext-primary">I'm Beef, and this is my site!</p>
            <a href="/about">About me</a>
        </div>
	</main>
</BaseLayout>